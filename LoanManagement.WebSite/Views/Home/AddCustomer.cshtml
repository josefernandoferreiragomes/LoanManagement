@model LoanManagement.WebSite.Models.AddCustomerViewmodel
@{
    ViewBag.Title = "Add Customer";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>

<div class="container">
    @using (Html.BeginForm(actionName: "AddCustomer", controllerName: "Home", method: FormMethod.Post))
    {
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.customer.CustomerName)
        </div>
        <div class="col-md-2">
            @Html.TextBoxFor(m => m.customer.CustomerName, new { id = "CustomerName" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.customer.CustomerTypeId)
        </div>
        <div class="col-md-2">
            @Html.DropDownListFor(m => m.customer.CustomerTypeId, Model.selecLoanItems, "Select Customer Type", new { id = "CustomerTypeId" })
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input type="submit" value="Submit Form" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            @Model.Message
        </div>
    </div>
    
    }
    <p></p>
    <div class="row">
        <div class="col-md-1">
            <button id="btnSave">Save Customer Ajax</button>
        </div>
    </div>
</div>

    @section Scripts
    {
        <script src="~/Scripts/LoanManager/LoanManager.js"></script>

    }
