<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Loan Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Customers", "Customers", "Customer")</li>
                    <li>@Html.ActionLink("Search Customers", "SearchCustomers", "Customer")</li>
                    <li>@Html.ActionLink("Add Customer", "AddCustomer", "Customer")</li>
                    <li>@Html.ActionLink("Add Customer Form Col", "AddCustomerFormCollection", "Customer")</li>
                    <li>@Html.ActionLink("Installment home page", "Index", "Installment")</li>
                    <li>@Html.ActionLink("Installment list", "LoanInstallments", "Installment")</li>
                    <li>@Html.ActionLink("Add Installment", "AddLoanInstallment", "Installment")</li>
                    <li>@Html.ActionLink("Simulate Loan", "Simulateloan", "Loan")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        var applicationURL = "http://localhost:61104/Customer/";
                //GET FROM CONFIG
    </script>
</body>
</html>
